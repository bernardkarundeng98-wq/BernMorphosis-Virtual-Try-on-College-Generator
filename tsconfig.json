{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@services/*": ["Services/*"],
      "@utils/*": ["Utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
